        <item name="divider">@color/colorDivider</item>
        <!--        <item name="android:textSize">@dimen/_12ssp</item>-->
    </style>

    <style name="OverlayButtonCircle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="vertical_divider">
        <item name="android:layout_width">@dimen/_1sdp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>